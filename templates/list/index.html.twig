{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    
  <table class="table">

    {% for apt in apartments %}
    
    <tr>
      <td><a href="/apartment/{{ apt.id }}">{{ apt.title }}</a></td>
      <td>{{ apt.address }}</td>

      {% if links %}
      <td><a href="/update/{{ apt.id}}">Update</a></td>
      <td><a href="/delete/{{ apt.id}}">x</a></td>
      {% endif %}
      <td><a href="/user/{{ apt.owner.id }}">{{ apt.owner.username }}</a></td>
    </tr>

    </tr>
    {% endfor %}
  </table>

    
</div>
{% endblock %}
